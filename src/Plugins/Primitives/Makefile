all:
	@make -C ./Sphere/
	@make -C ./Plane/
	@make -C ./Cylinder/
	@make -C ./Cone/
	@make -C ./Triangle/
	@make -C ./RectangularCuboid/
	@make -C ./Mesh/

clean:
	@make clean -C ./Sphere/
	@make clean -C ./Plane/
	@make clean -C ./Cylinder/
	@make clean -C ./Cone/
	@make clean -C ./Triangle/
	@make clean -C ./RectangularCuboid/
	@make clean -C ./Mesh/

fclean: clean
	@make fclean -C ./Sphere/
	@make fclean -C ./Plane/
	@make fclean -C ./Cylinder/
	@make fclean -C ./Cone/
	@make fclean -C ./Triangle/
	@make fclean -C ./RectangularCuboid/
	@make fclean -C ./Mesh/

re:	fclean all
